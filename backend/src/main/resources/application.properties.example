spring.application.name=evolve

# ===============================
# Configuração do Banco (SQLite)
# ===============================
spring.datasource.url=jdbc:sqlite:evolve.db
spring.datasource.driverClassName=org.sqlite.JDBC
spring.jpa.hibernate.ddl-auto=update
spring.jpa.database-platform=com.github.gwenn.sqlite.SQLiteDialect

# ===============================
# Configuração de Logging
# ===============================
logging.level.org.springframework.security=INFO
logging.level.org.hibernate.SQL=DEBUG

# ===============================
# Configuração JWT
# ===============================
app.jwt.secret=YmVzdC1rZXB0LXNlY3JldC1mb3Itand0LXRlc3RpbmctcHVycG9zZXM=
app.jwt.expiration-ms=3600000

# ===============================
# Configuração OTP (recuperação de senha)
# ===============================
app.otp.expiration-ms=300000

# ===============================
# Configuração de Locale/Timezone (opcional)
# ===============================
spring.jackson.time-zone=America/Sao_Paulo
spring.jackson.locale=pt_BR

# ===============================
# Configuração de envio de e-mail (SMTP)
# ===============================
spring.mail.host=
spring.mail.port=
spring.mail.username=
spring.mail.password=
spring.mail.properties.mail.smtp.auth=
spring.mail.properties.mail.smtp.starttls.enable=
spring.mail.properties.mail.smtp.starttls.required=