spring.application.name=evolve

# ===============================
# Configuração do Banco (H2 em memória)
# ===============================
spring.datasource.url=jdbc:h2:mem:testdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update

# Ativar console H2 para debug
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# ===============================
# Configuração de Logging
# ===============================
logging.level.org.springframework.security=DEBUG
logging.level.org.hibernate.SQL=DEBUG

# ===============================
# Configuração JWT
# ===============================
app.jwt.secret=
app.jwt.expiration-ms=3600000   # 1 hora (em milissegundos)

# ===============================
# Configuração OTP (recuperação de senha)
# ===============================
app.otp.expiration-ms=300000    # 5 minutos (em milissegundos)

# ===============================
# Configuração de Locale/Timezone (opcional)
# ===============================
spring.jackson.time-zone=America/Sao_Paulo
spring.jackson.locale=pt_BR

# ===============================
# Configuração de envio de e-mail (SMTP)
# ===============================
spring.mail.host=
spring.mail.port=
spring.mail.username=
spring.mail.password=
spring.mail.properties.mail.smtp.auth=
spring.mail.properties.mail.smtp.starttls.enable=
spring.mail.properties.mail.smtp.starttls.required=
